<%= render 'shared/sort_search_header'%>
<div class="container">
  <div>
    <h1 class="text-center"><%= t('.heading') %></h1>
    <div class="row">
      <div class="col-md-2 col-md-offset-5"><hr></div>
    </div>
    <h3 class="text-center"><%= t('.info') %></h3>
  </div>
  <div class="row">
    <%@styles.each do |style| %>
      <div class="col-md-4">
        <img src="https://s3.amazonaws.com/shopify-theme-store/screenshots/1034/main/optimized_large.jpg" class="img-thumbnail" alt="Image">
        <span><%= link_to "#{style.theme.name} â€” #{style.name}", theme_store_theme_page_path(style)%></span>
        <% if style.theme.price == 0 %>
        <span class="pull-right"><%= t('.free_price') %></span>
        <% else %>
        <span class="pull-right"><%= style.theme.price %>$</span>
        <% end %>
      </div>
    <%end %>
  </div>
  <div class="row">
    <div class="col-md-2 col-md-offset-5">
      <button class="btn btn-success"><%= t('.button_more_themes') %></button>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1"><hr></div>
  </div>
  <%= render 'shared/sell_theme' %>
  <%= render "shared/get_started" %>
</div>